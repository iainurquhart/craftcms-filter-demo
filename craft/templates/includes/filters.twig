<h2>Filters</h2>

<form action="/" method="GET">

	{# Color: Mutually exclusive #}

	<h3>Color</h3>

	<ul class="nav">

		{% for item in craft.categories.group('color') %}

			{% set isActive = item.id in craft.request.getParam('color') %}

			<li {{ isActive ? 'class="active"' : '' }}>
				<label>
					<input type="checkbox" name="color[]" value="{{ item.id }}" {{ isActive ? 'checked' : '' }}>
					{{ item.title }}
				</label>
			</li>

		{% endfor %}

	</ul>

	<input type="submit" value="Refresh" class="btn btn-primary filter-submit">

</form>
